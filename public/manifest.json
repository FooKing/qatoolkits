{
  "name": "QA ToolKit",
  "description": "QA tools under one roof",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": ["webRequest", "webRequestBlocking" , "activeTab", "tabs", "<all_urls>","downloads", "clipboardRead"],
  "browser_action":
  {
    "default_title": "QA ToolKit",
    "default_icon": "logo.svg"
  },
  "sidebar_action": {
    "default_title": "QA ToolKit",
    "default_panel": "index.html",
    "default_icon": "logo.svg"
  },
  "icons":{
    "96" : "logo.svg"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true,
    "open_in_tab": true
  }
}